@model StudyMaterialShare.Web.Models.LoginViewModel

@{
    ViewBag.Title= "Belépés";
}

<div class="d-flex justify-content-center">
    <h1>Belépés</h1>
</div>
<hr />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-4  bg-light pt-4 pb-3 pe-5 ps-5 border border-1 rounded shadow-sm">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Belépés" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
